{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-template": "error"
  },
  "globals": {
    "game": "readonly",
    "ui": "readonly",
    "Hooks": "readonly",
    "CONFIG": "readonly",
    "CONST": "readonly",
    "foundry": "readonly",
    "Actor": "readonly",
    "Item": "readonly",
    "Scene": "readonly",
    "Token": "readonly",
    "User": "readonly",
    "ChatMessage": "readonly",
    "Combat": "readonly",
    "Roll": "readonly",
    "DiceRoll": "readonly",
    "DiceTerm": "readonly",
    "Die": "readonly",
    "canvas": "readonly",
    "socket": "readonly"
  }
}
